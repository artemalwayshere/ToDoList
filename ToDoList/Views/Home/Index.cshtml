@model IEnumerable<ToDoList.Models.ToDoItem>

@{
    ViewBag.Title = "Home Page";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
</head>
<body>
    <div class="list_todo">
        @foreach (var item in Model)
        {
            <table>
                <tr>
                    <td>@item.Title</td>
                    <td>@item.DateTimeCreate.ToString("MM/dd/yyyy")</td>
                    <td>@item.IsDone</td>
                    <td>DeadLine @item.IsDone</td>
                    <td>
                        <a asp-controller="ToDoItem" asp-action="Remove" asp-route-id="@item.Id">Удалить</a>
                        <a asp-controller="ToDoItem" asp-action="UpdateItem" asp-route-id="@item.Id">Изменить</a>
                    </td>
                </tr>
            </table>
        }
    </div>
</body>
</html>

